<!DOCTYPE html>
<html lang="<%= currentLanguage %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="<%= csrfToken %>">
    <title>VILNIUS TECH | <%= t('auth.signIn') %></title>
    <link rel="stylesheet" href="/css/login.css">
</head>
<body>
    <div class="login-container">
    <a href="/" class="school-logo">
    <img src="/images/Vilnius-Gediminas-Technical-University_logo-150x150-717593362.jpg" alt="Vilnius Tech Logo"></a>
    
        <div class="login-card">
            <div class="login-header">
                <h2><%= t('auth.loginTitle') %></h2>
                <p><%= t('auth.loginSubtitle') %></p>
            </div>

            <% if(error_msg && error_msg.length > 0){ %>
                <div class="error-message show" style="display:block; color: white; background: #e74c3c; padding: 10px; border-radius: 5px; margin-bottom: 15px;">
                    <%= error_msg %>
                </div>
            <% } %>

            <% if(success_msg && success_msg.length > 0){ %>
                <div class="success-message show" style="display:block; position: relative; transform: none; opacity: 1; margin-bottom: 15px;">
                    <%= success_msg %>
                </div>
            <% } %>
            
            <form class="login-form" id="loginForm" action="/auth/login" method="POST" novalidate>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="form-group">
                    <div class="input-wrapper">
                        <input type="text" id="email" name="email" placeholder=" " required autocomplete="username">
                        <label for="email"><%= t('auth.emailOrUsername') %></label>
                    </div>
                    <span class="error-message" id="emailError"></span>
                </div>

                <div class="form-group">
                    <div class="input-wrapper password-wrapper">
                        <input type="password" id="password" name="password" placeholder=" " required autocomplete="current-password">
                        <label for="password"><%= t('auth.password') %></label>
                        <button type="button" class="password-toggle" id="passwordToggle" aria-label="Toggle password visibility">
                            <span class="eye-icon"></span>
                        </button>    
                    </div>
                    <span class="error-message" id="passwordError"></span>
                </div>

                <div class="form-options">
                    <label class="remember-wrapper">
                        <input type="checkbox" id="remember" name="remember">
                        <span class="checkbox-label">
                            <span class="checkmark"></span>
                            <%= t('auth.rememberMe') %>
                        </span>
                    </label>
                    <a href="/auth/forgot-password" class="forgot-password"><%= t('auth.forgotPassword') %></a>
                </div>

                <button type="submit" class="login-btn btn">
                    <span class="btn-text"><%= t('auth.signIn') %></span>
                    <span class="btn-loader"></span>
                </button>
            </form>

            <div class="divider">
                <span><%= t('auth.orContinueWith') %></span>
            </div>

            <div class="social-login">
                <button type="button" class="social-btn google-btn">
                    <span class="social-icon google-icon"></span>
                    Google
                </button>
                <button type="button" class="social-btn github-btn">
                    <span class="social-icon github-icon"></span>
                    GitHub
                </button>
            </div>

            <div class="signup-link">
                <p><%= t('auth.dontHaveAccount') %> <a href="/auth/register"><%= t('auth.signUp') %></a></p>
            </div>

             <!-- Success message container kept for JS animations if needed, but handled by EJS above mostly -->
            <div class="success-message" id="successMessage">
                <div class="success-icon">âœ“</div>
                <h3>Login Successful!</h3>
                <p>Redirecting to your dashboard...</p>
            </div>
        </div>

        <%- include('partials/auth-language') %>
    </div>

    <script src="/js/form-utils.js"></script>
    <script src="/js/script.js"></script>
    <script src="/js/auth-language.js"></script>
</body>
</html>