<!DOCTYPE html>
<html lang="<%= currentLanguage %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="<%= csrfToken %>">
    <title>VILNIUS TECH | <%= t('auth.forgotTitle') %></title>
    <link rel="stylesheet" href="/css/login.css">
</head>
<body>
    <div class="login-container">
        <a href="/" class="school-logo">
            <img src="/images/Vilnius-Gediminas-Technical-University_logo-150x150-717593362.jpg" alt="Vilnius Tech Logo">
        </a>

        <div class="login-card">
            <div class="login-header">
                <h2><%= t('auth.forgotTitle') %></h2>
                <p><%= t('auth.forgotSubtitle') %></p>
            </div>

            <% if(error_msg && error_msg.length > 0){ %>
                <div class="error-message show" style="display:block; color: white; background: #e74c3c; padding: 10px; border-radius: 5px; margin-bottom: 15px;">
                    <%= error_msg %>
                </div>
            <% } %>

            <% if(success_msg && success_msg.length > 0){ %>
                <div class="success-message show" style="display:block; position: relative; transform: none; opacity: 1; margin-bottom: 15px;">
                    <%= success_msg %>
                </div>
            <% } %>

            <form class="login-form" action="/auth/forgot-password" method="POST" novalidate>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="form-group">
                    <div class="input-wrapper">
                        <input type="email" id="email" name="email" placeholder=" " required autocomplete="email">
                        <label for="email"><%= t('auth.emailAddress') %></label>
                    </div>
                </div>

                <button type="submit" class="login-btn btn">
                    <span class="btn-text"><%= t('auth.sendReset') %></span>
                </button>
            </form>

            <div class="signup-link" style="margin-top: 20px;">
                <p><%= t('auth.rememberedPassword') %> <a href="/"><%= t('auth.signInLower') %></a></p>
            </div>
        </div>

        <%- include('partials/auth-language') %>
    </div>

    <script src="/js/auth-language.js"></script>
</body>
</html>
