<!DOCTYPE html>
<html lang="<%= currentLanguage %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="<%= csrfToken %>">
    <title>VILNIUS TECH | <%= t('auth.signUp') %></title>
    <link rel="stylesheet" href="/css/login.css">
</head>
<body>
    <div class="login-container">
    <a href="/" class="school-logo">
    <img src="/images/Vilnius-Gediminas-Technical-University_logo-150x150-717593362.jpg" alt="Vilnius Tech Logo"></a>
    
        <div class="login-card">
            <div class="login-header">
                <h2><%= t('auth.registerTitle') %></h2>
                <p><%= t('auth.registerSubtitle') %></p>
            </div>

            <% if(error_msg && error_msg.length > 0){ %>
                <div class="error-message show" style="display:block; color: white; background: #e74c3c; padding: 10px; border-radius: 5px; margin-bottom: 15px;">
                    <%= error_msg %>
                </div>
            <% } %>

            <% if(success_msg && success_msg.length > 0){ %>
                <div class="success-message show" style="display:block; position: relative; transform: none; opacity: 1; margin-bottom: 15px;">
                    <%= success_msg %>
                </div>
            <% } %>
            
            <form class="login-form" id="registerForm" action="/auth/register" method="POST" novalidate>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="form-group">
                    <div class="input-wrapper">
                        <input type="text" id="first_name" name="first_name" placeholder=" " required autocomplete="given-name" value="<%= (typeof formData !== 'undefined' && formData && formData.firstName) ? formData.firstName : '' %>">
                        <label for="first_name"><%= t('auth.firstName') %></label>
                    </div>
                </div>

                <div class="form-group">
                    <div class="input-wrapper">
                        <input type="text" id="last_name" name="last_name" placeholder=" " required autocomplete="family-name" value="<%= (typeof formData !== 'undefined' && formData && formData.lastName) ? formData.lastName : '' %>">
                        <label for="last_name"><%= t('auth.lastName') %></label>
                    </div>
                </div>

                <div class="form-group">
                    <div class="input-wrapper">
                        <input type="text" id="username" name="username" placeholder=" " required autocomplete="username" value="<%= (typeof formData !== 'undefined' && formData && formData.username) ? formData.username : '' %>">
                        <label for="username"><%= t('auth.username') %></label>
                    </div>
                </div>

                <div class="form-group">
                    <div class="input-wrapper">
                        <input type="email" id="email" name="email" placeholder=" " required autocomplete="email" pattern="^[^\s@]+@(stud\.)?vilniustech\.lt$" title="Use your school email" value="<%= (typeof formData !== 'undefined' && formData && formData.email) ? formData.email : '' %>">
                        <label for="email"><%= t('auth.schoolEmail') %></label>
                    </div>
                </div>

                <div class="form-group">
                    <div class="input-wrapper password-wrapper">
                        <input type="password" id="password" name="password" placeholder=" " required autocomplete="new-password">
                        <label for="password"><%= t('auth.password') %></label>
                        <button type="button" class="password-toggle" id="passwordToggle" aria-label="Toggle password visibility">
                            <span class="eye-icon"></span>
                        </button>    
                    </div>
                </div>

                <div class="form-group">
                    <div class="input-wrapper password-wrapper">
                        <input type="password" id="confirm_password" name="confirm_password" placeholder=" " required autocomplete="new-password">
                        <label for="confirm_password"><%= t('auth.confirmPassword') %></label>
                    </div>
                </div>

                <button type="submit" class="login-btn btn">
                    <span class="btn-text"><%= t('auth.signUp') %></span>
                    <span class="btn-loader"></span>
                </button>
            </form>

            <div class="divider">
                <span><%= t('auth.or') %></span>
            </div>

            <div class="signup-link">
                <p><%= t('auth.alreadyHaveAccount') %> <a href="/"><%= t('auth.signInLower') %></a></p>
            </div>
        </div>

        <%- include('partials/auth-language') %>
    </div>

    <script src="/js/form-utils.js"></script>
    <script src="/js/script.js"></script>
    <script src="/js/auth-language.js"></script>
</body>
</html>
