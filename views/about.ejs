<!DOCTYPE html>
<html lang="<%= currentLanguage %>">
<head>
  <%- include('partials/head') %>
  <title>VILNIUS TECH | <%= t('footer.about') %></title>
</head>
<body>
  <div class="dash">
    <%- include('partials/sidebar') %>

    <main class="main">
      <%- include('partials/header') %>

      <section class="content">
        <article class="card">
          <div class="card-head">
            <h2><%= t('about.title') %></h2>
            <span class="badge"><%= t('dashboard.info') %></span>
          </div>

          <p class="muted" style="margin-bottom: 18px;">
            <%= t('about.description') %>
          </p>

          <div class="stats" style="grid-template-columns: repeat(3, minmax(200px, 1fr));">
            <div class="stat">
              <strong><%= t('about.frontend') %></strong>
              <small><%= t('about.frontendDesc') %></small>
            </div>

            <div class="stat">
              <strong><%= t('about.clientLogic') %></strong>
              <small><%= t('about.clientLogicDesc') %></small>
            </div>

            <div class="stat">
              <strong><%= t('about.scalability') %></strong>
              <small><%= t('about.scalabilityDesc') %></small>
            </div>
          </div>
        </article>
      </section>

      <%- include('partials/footer') %>
    </main>
  </div>
</body>
</html>
