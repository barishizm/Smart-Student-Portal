<!DOCTYPE html>
<html lang="<%= currentLanguage %>">
<head>
    <%- include('../partials/head') %>
    <title>VILNIUS TECH | <%= t('students.title') %></title>
</head>
<body>
    <div class="dash">
        <%- include('../partials/sidebar') %>
        
        <main class="main">
            <%- include('../partials/header') %>

            <div class="content">
                <div class="card">
                    <div class="card-head">
                        <h2><%= t('students.title') %></h2>
                        <div class="actions">
                            <a href="/admin/students/new" class="btn"><%= t('students.addStudent') %></a>
                            <a href="/admin/students/xml" class="btn ghost" target="_blank"><%= t('students.exportXml') %></a>
                        </div>
                    </div>
                    
                    <% if(success_msg && success_msg.length > 0){ %>
                        <div style="background:#d4edda; color:#155724; padding:10px; margin-bottom:15px; border-radius:5px;">
                            <%= success_msg %>
                        </div>
                    <% } %>
                    <% if(error_msg && error_msg.length > 0){ %>
                        <div style="background:#f8d7da; color:#721c24; padding:10px; margin-bottom:15px; border-radius:5px;">
                            <%= error_msg %>
                        </div>
                    <% } %>

                    <div class="table-wrap">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th><%= t('students.studentId') %></th>
                                    <th><%= t('students.name') %></th>
                                    <th><%= t('students.surname') %></th>
                                    <th><%= t('students.username') %></th>
                                    <th><%= t('students.email') %></th>
                                    <th><%= t('students.group') %></th>
                                    <th><%= t('students.actions') %></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if(students.length > 0) { %>
                                    <% students.forEach(function(student) { %>
                                        <tr>
                                            <td><%= student.student_id %></td>
                                            <td><%= student.name %></td>
                                            <td><%= student.surname %></td>
                                            <td><%= student.username || '-' %></td>
                                            <td><%= student.email %></td>
                                            <td><%= student.group_name %></td>
                                            <td>
                                                <a href="/admin/students/<%= student.id %>/edit" class="btn small"><%= t('students.edit') %></a>
                                                <form action="/admin/students/<%= student.id %>/delete" method="POST" style="display:inline;" onsubmit="return confirmDeleteStudent(this);">
                                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                    <input type="hidden" name="delete_confirm" value="">
                                                    <button type="submit" class="btn small danger"><%= t('students.delete') %></button>
                                                </form>
                                            </td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                                                                <td colspan="7" style="text-align:center;"><%= t('students.noStudents') %></td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>

                    <div class="event-manage-list-wrap" style="margin-top:14px;">
                        <% const emailLocksSource = typeof deletedEmailLocks !== 'undefined' ? deletedEmailLocks : []; %>
                        <% const emailLocks = Array.isArray(emailLocksSource) ? emailLocksSource : []; %>
                        <h3 class="profile-change-title"><%= t('students.unlockDeletedEmailTitle') %></h3>
                        <p class="muted" style="margin-bottom:10px;"><%= t('students.unlockDeletedEmailHint') %></p>

                        <form action="/admin/students/unlock-deleted-email" method="POST" class="profile-change-form" style="max-width:520px;">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <input type="email" name="email" class="profile-change-input" placeholder="<%= t('students.email') %>" required>
                            <button type="submit" class="btn small"><%= t('students.unlockDeletedEmailButton') %></button>
                        </form>

                        <% if (emailLocks.length > 0) { %>
                            <div class="table-wrap" style="margin-top:12px;">
                                <table class="table" style="min-width: 620px;">
                                    <thead>
                                        <tr>
                                            <th><%= t('students.email') %></th>
                                            <th><%= t('students.unlockDeletedEmailLockedAt') %></th>
                                            <th><%= t('students.actions') %></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% emailLocks.forEach((lockItem) => { %>
                                            <% const lockedDate = new Date(Number(lockItem.deleted_at)); %>
                                            <% const lockedDateLabel = Number.isNaN(lockedDate.getTime())
                                                ? '-'
                                                : lockedDate.toLocaleString(currentLanguage || 'en'); %>
                                            <tr>
                                                <td><%= lockItem.email %></td>
                                                <td><%= lockedDateLabel %></td>
                                                <td>
                                                    <form action="/admin/students/unlock-deleted-email" method="POST" style="display:inline;" onsubmit="return confirm('<%= t('students.unlockDeletedEmailConfirm') %>');">
                                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                        <input type="hidden" name="email" value="<%= lockItem.email %>">
                                                        <button type="submit" class="btn small"><%= t('students.unlockDeletedEmailButton') %></button>
                                                    </form>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <p class="muted event-empty"><%= t('students.unlockDeletedEmailEmpty') %></p>
                        <% } %>
                    </div>
                </div>
            </div>

            <%- include('../partials/footer') %>
        </main>
    </div>
        <script>
            function confirmDeleteStudent(form) {
                const firstConfirm = window.confirm('<%= t('students.deleteConfirm1') %>');
                if (!firstConfirm) return false;

                const typed = window.prompt("<%= t('students.deleteConfirm2') %>");
                if (typed !== 'DELETE') {
                    window.alert('<%= t('students.deleteCancelled') %>');
                    return false;
                }

                const hidden = form.querySelector('input[name="delete_confirm"]');
                if (hidden) hidden.value = 'DELETE';
                return true;
            }
        </script>
</body>
</html>
