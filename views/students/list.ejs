<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <title>VILNIUS TECH | Students</title>
</head>
<body>
    <div class="dash">
        <%- include('../partials/sidebar') %>
        
        <main class="main">
            <%- include('../partials/header') %>

            <div class="content">
                <div class="card">
                    <div class="card-head">
                        <h2>Student Management</h2>
                        <div class="actions">
                            <a href="/admin/students/new" class="btn">Add Student</a>
                            <a href="/admin/students/xml" class="btn ghost" target="_blank">Export XML</a>
                        </div>
                    </div>
                    
                    <% if(success_msg && success_msg.length > 0){ %>
                        <div style="background:#d4edda; color:#155724; padding:10px; margin-bottom:15px; border-radius:5px;">
                            <%= success_msg %>
                        </div>
                    <% } %>
                    <% if(error_msg && error_msg.length > 0){ %>
                        <div style="background:#f8d7da; color:#721c24; padding:10px; margin-bottom:15px; border-radius:5px;">
                            <%= error_msg %>
                        </div>
                    <% } %>

                    <div class="table-wrap">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Student ID</th>
                                    <th>Name</th>
                                    <th>Surname</th>
                                    <th>Username</th>
                                    <th>Email</th>
                                    <th>Group</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if(students.length > 0) { %>
                                    <% students.forEach(function(student) { %>
                                        <tr>
                                            <td><%= student.student_id %></td>
                                            <td><%= student.name %></td>
                                            <td><%= student.surname %></td>
                                            <td><%= student.username || '-' %></td>
                                            <td><%= student.email %></td>
                                            <td><%= student.group_name %></td>
                                            <td>
                                                <a href="/admin/students/<%= student.id %>/edit" class="btn small">Edit</a>
                                                <form action="/admin/students/<%= student.id %>/delete" method="POST" style="display:inline;" onsubmit="return confirmDeleteStudent(this);">
                                                    <input type="hidden" name="delete_confirm" value="">
                                                    <button type="submit" class="btn small danger">Delete</button>
                                                </form>
                                            </td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                                                                <td colspan="7" style="text-align:center;">No students found</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <%- include('../partials/footer') %>
        </main>
    </div>
        <script>
            function confirmDeleteStudent(form) {
                const firstConfirm = window.confirm('This will remove student and linked user from database. Continue?');
                if (!firstConfirm) return false;

                const typed = window.prompt("Type DELETE to confirm permanent deletion:");
                if (typed !== 'DELETE') {
                    window.alert('Deletion cancelled.');
                    return false;
                }

                const hidden = form.querySelector('input[name="delete_confirm"]');
                if (hidden) hidden.value = 'DELETE';
                return true;
            }
        </script>
</body>
</html>
