<!DOCTYPE html>
<html lang="<%= currentLanguage %>">
<head>
    <%- include('../partials/head') %>
    <title>VILNIUS TECH | <%= t('students.addNewStudent') %></title>
</head>
<body>
    <div class="dash">
        <%- include('../partials/sidebar') %>
        
        <main class="main">
            <%- include('../partials/header') %>

            <div class="content" style="max-width: 600px; margin: 0 auto;">
                <div class="card">
                    <div class="card-head">
                        <h2><%= t('students.addNewStudent') %></h2>
                        <a href="/admin/students" class="btn ghost"><%= t('students.back') %></a>
                    </div>
                    
                    <% if(error_msg && error_msg.length > 0){ %>
                        <div style="background:#f8d7da; color:#721c24; padding:10px; margin-bottom:15px; border-radius:5px;">
                            <%= error_msg %>
                        </div>
                    <% } %>

                    <form action="/admin/students" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="form-group" style="margin-bottom:15px;">
                            <label><%= t('students.studentId') %></label>
                            <input type="text" name="student_id" required class="input" style="width:100%; padding:10px; border:1px solid #ddd; border-radius:4px;">
                        </div>
                        <div class="form-group" style="margin-bottom:15px;">
                            <label><%= t('students.name') %></label>
                            <input type="text" name="name" required class="input" style="width:100%; padding:10px; border:1px solid #ddd; border-radius:4px;">
                        </div>
                        <div class="form-group" style="margin-bottom:15px;">
                            <label><%= t('students.surname') %></label>
                            <input type="text" name="surname" required class="input" style="width:100%; padding:10px; border:1px solid #ddd; border-radius:4px;">
                        </div>
                        <div class="form-group" style="margin-bottom:15px;">
                            <label><%= t('students.email') %></label>
                            <input type="email" name="email" class="input" style="width:100%; padding:10px; border:1px solid #ddd; border-radius:4px;">
                        </div>
                        <div class="form-group" style="margin-bottom:15px;">
                            <label><%= t('students.group') %></label>
                            <input type="text" name="group_name" class="input" style="width:100%; padding:10px; border:1px solid #ddd; border-radius:4px;">
                        </div>
                        <button type="submit" class="btn"><%= t('students.addStudent') %></button>
                    </form>
                </div>
            </div>

            <%- include('../partials/footer') %>
        </main>
    </div>
</body>
</html>
