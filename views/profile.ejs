<!DOCTYPE html>
<html lang="<%= currentLanguage %>">
<head>
  <%- include('partials/head') %>
  <link rel="stylesheet" href="https://unpkg.com/cropperjs@1.6.2/dist/cropper.min.css">
  <title>VILNIUS TECH | <%= t('profile.title') %></title>
</head>
<body>
  <div class="dash collapsed">
    <%- include('partials/sidebar') %>

    <main class="main">
      <%- include('partials/header') %>

      <section class="content">
        <article class="card">
          <div class="card-head">
            <h2><%= t('profile.title') %></h2>
            <span class="badge"><%= t('profile.account') %></span>
          </div>

          <% if(success_msg && success_msg.length > 0){ %>
            <div style="background:#d4edda; color:#155724; padding:10px; margin-bottom:15px; border-radius:10px;">
              <%= success_msg %>
            </div>
          <% } %>

          <% if(error_msg && error_msg.length > 0){ %>
            <div style="background:#f8d7da; color:#721c24; padding:10px; margin-bottom:15px; border-radius:10px;">
              <%= error_msg %>
            </div>
          <% } %>

          <div class="profile-photo-panel">
            <div class="profile-photo-preview">
              <div class="avatar avatar-lg" aria-hidden="true">
                <% if (user && user.avatar_url) { %>
                  <img src="<%= user.avatar_url %>" alt="Profile photo" class="avatar-img">
                <% } else { %>
                  <%= user ? user.username.charAt(0).toUpperCase() : 'U' %>
                <% } %>
              </div>
              <div class="profile-photo-meta">
                <strong><%= t('profile.profilePhoto') %></strong>
                <small><%= user && user.avatar_url ? t('profile.photoUploaded') : t('profile.photoMissing') %></small>
              </div>
            </div>

            <div class="profile-photo-actions">
              <div class="profile-photo-form">
                <input type="file" id="profilePhotoInput" accept="image/png,image/jpeg,image/webp" class="profile-file-input" hidden>
                <button type="button" id="uploadCroppedPhotoBtn" class="btn"><%= user && user.avatar_url ? t('profile.changePhoto') : t('profile.uploadPhoto') %></button>
              </div>

              <% if (user && user.avatar_url) { %>
                <form action="/auth/profile-photo/delete" method="POST">
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                  <button type="submit" class="btn ghost"><%= t('profile.deletePhoto') %></button>
                </form>
              <% } %>
            </div>

            <div id="profileCropArea" class="profile-crop-area" hidden>
              <img id="profileCropImage" alt="<%= t('profile.cropPreview') %>">
            </div>
          </div>

          <div class="stats profile-stats">
            <div class="stat">
              <strong><%= t('profile.realName') %></strong>
              <small><%= (user?.first_name || '-') %> <%= (user?.last_name || '') %></small>
            </div>
            <div class="stat">
              <strong><%= t('profile.username') %></strong>
              <small><%= user ? user.username : '-' %></small>
            </div>
            <div class="stat">
              <strong><%= t('profile.role') %></strong>
              <small><%= user ? t(`roles.${user.role}`) : '-' %></small>
            </div>
            <div class="stat">
              <strong><%= t('profile.email') %></strong>
              <small><%= user && user.email ? user.email : t('profile.notAvailable') %></small>
            </div>

            <div class="stat profile-action-stat">
              <div class="profile-action-buttons">
                <button type="button" id="toggleUsernameCard" class="profile-change-btn profile-change-btn-large" aria-expanded="false" aria-controls="usernameChangeCard"><%= t('profile.changeUsername') %></button>
                <button type="button" id="togglePasswordCard" class="profile-change-btn profile-change-btn-large" aria-expanded="false" aria-controls="passwordChangeCard"><%= t('profile.changePassword') %></button>
              </div>
            </div>

            <div class="stat profile-delete-card">
              <h3 class="profile-change-title"><%= t('profile.deleteAccount') %></h3>
              <form id="deleteAccountForm" action="/auth/delete-account" method="POST" class="profile-change-form profile-delete-form">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <input type="hidden" name="delete_confirmation_text" id="deleteAccountConfirmationField" value="">
                <button type="submit" class="btn danger profile-change-submit"><%= t('profile.deleteAccount') %></button>
              </form>
            </div>
          </div>

          <div id="usernameChangeCard" class="profile-change-card" hidden>
            <h3 class="profile-change-title"><%= t('profile.changeUsername') %></h3>
            <form action="/auth/change-username" method="POST" class="profile-change-form">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <input type="text" name="current_identity" placeholder="<%= t('profile.currentIdentity') %>" required autocomplete="username" class="profile-change-input">
              <input type="password" name="password" placeholder="<%= t('profile.currentPassword') %>" required autocomplete="current-password" class="profile-change-input">
              <input type="text" name="new_username" placeholder="<%= t('profile.newUsername') %>" required autocomplete="username" class="profile-change-input">
              <button type="submit" class="btn profile-change-submit"><%= t('profile.updateUsername') %></button>
            </form>
          </div>

          <div id="passwordChangeCard" class="profile-change-card" hidden>
            <h3 class="profile-change-title"><%= t('profile.changePassword') %></h3>
            <form action="/auth/change-password" method="POST" class="profile-change-form">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <input type="password" name="current_password" placeholder="<%= t('profile.currentPassword') %>" required autocomplete="current-password" class="profile-change-input">
              <input type="password" name="new_password" placeholder="<%= t('profile.newPassword') %>" required autocomplete="new-password" class="profile-change-input">
              <input type="password" name="confirm_password" placeholder="<%= t('profile.confirmNewPassword') %>" required autocomplete="new-password" class="profile-change-input">
              <button type="submit" class="btn profile-change-submit"><%= t('profile.updatePassword') %></button>
            </form>
          </div>

        </article>
      </section>

      <%- include('partials/footer') %>
    </main>
  </div>

  <div id="deleteAccountConfirmBackdrop" class="delete-account-confirm-backdrop" hidden></div>
  <div id="deleteAccountConfirmCard" class="delete-account-confirm-card" hidden role="dialog" aria-modal="true" aria-labelledby="deleteAccountConfirmTitle">
    <h3 id="deleteAccountConfirmTitle" class="profile-change-title">Delete Account Confirmation</h3>
    <p class="delete-account-confirm-text">After deletion, your account is removed immediately and re-registering with the same email requires contacting IT support.</p>
    <div class="delete-account-confirm-actions">
      <button type="button" id="confirmDeleteAccountBtn" class="btn danger">YES, I WANT TO DELETE</button>
      <button type="button" id="cancelDeleteAccountBtn" class="btn ghost">NO, THANKS</button>
    </div>
  </div>

  <div id="deleteAccountFinalCard" class="delete-account-confirm-card" hidden role="dialog" aria-modal="true" aria-labelledby="deleteAccountFinalTitle">
    <h3 id="deleteAccountFinalTitle" class="profile-change-title">Delete Account Confirmation</h3>
    <p class="delete-account-confirm-text">If you really want to delete this account please write 'I WANT TO DELETE MY ACCOUNT'</p>
    <input type="text" id="deleteAccountVerifyInput" class="profile-change-input" autocomplete="off">
    <div class="delete-account-confirm-actions delete-account-final-actions">
      <button type="button" id="finalizeDeleteAccountBtn" class="btn danger">OK</button>
      <button type="button" id="cancelFinalDeleteAccountBtn" class="btn ghost">NO, I CHANGED MY MIND</button>
    </div>
  </div>

  <script src="https://unpkg.com/cropperjs@1.6.2/dist/cropper.min.js"></script>
  <script src="/js/profile-photo.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const form = document.getElementById('deleteAccountForm');
      const backdrop = document.getElementById('deleteAccountConfirmBackdrop');
      const card = document.getElementById('deleteAccountConfirmCard');
      const finalCard = document.getElementById('deleteAccountFinalCard');
      const confirmBtn = document.getElementById('confirmDeleteAccountBtn');
      const cancelBtn = document.getElementById('cancelDeleteAccountBtn');
      const verifyInput = document.getElementById('deleteAccountVerifyInput');
      const finalizeBtn = document.getElementById('finalizeDeleteAccountBtn');
      const cancelFinalBtn = document.getElementById('cancelFinalDeleteAccountBtn');
      const confirmationField = document.getElementById('deleteAccountConfirmationField');
      if (!form || !backdrop || !card || !finalCard || !confirmBtn || !cancelBtn || !verifyInput || !finalizeBtn || !cancelFinalBtn || !confirmationField) return;

      let confirmedDelete = false;
      const requiredText = 'I WANT TO DELETE MY ACCOUNT';

      const openConfirmCard = () => {
        backdrop.hidden = false;
        card.hidden = false;
        finalCard.hidden = true;
      };

      const closeConfirmCard = () => {
        backdrop.hidden = true;
        card.hidden = true;
        finalCard.hidden = true;
      };

      const openFinalCard = () => {
        card.hidden = true;
        finalCard.hidden = false;
        verifyInput.value = '';
        confirmationField.value = '';
      };

      form.addEventListener('submit', (event) => {
        if (!confirmedDelete) {
          event.preventDefault();
          openConfirmCard();
        }
      });

      confirmBtn.addEventListener('click', () => {
        openFinalCard();
      });

      cancelBtn.addEventListener('click', () => {
        closeConfirmCard();
      });

      finalizeBtn.addEventListener('click', () => {
        if (String(verifyInput.value || '') !== requiredText) {
          window.alert('Please write exactly: I WANT TO DELETE MY ACCOUNT');
          verifyInput.focus();
          return;
        }

        confirmationField.value = String(verifyInput.value || '');
        confirmedDelete = true;
        closeConfirmCard();
        form.submit();
      });

      cancelFinalBtn.addEventListener('click', () => {
        closeConfirmCard();
      });

      backdrop.addEventListener('click', () => {
        closeConfirmCard();
      });
    });
  </script>
</body>
</html>
