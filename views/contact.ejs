<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
  <title>VILNIUS TECH | Contact</title>
</head>
<body>
  <div class="dash">
    <%- include('partials/sidebar') %>

    <main class="main">
      <%- include('partials/header') %>

      <section class="content">
        <article class="card">
          <div class="card-head">
            <h2>Contact</h2>
            <span class="badge">Form</span>
          </div>

          <form id="contactForm" novalidate>
            <div class="form-group" style="margin-bottom: 15px;">
              <label for="name">Full Name</label>
              <input type="text" id="name" required class="input" style="width:100%; padding:10px; border:1px solid rgba(255,255,255,.18); border-radius:8px; background:rgba(255,255,255,.10); color:rgba(255,255,255,.92);">
            </div>

            <div class="form-group" style="margin-bottom: 15px;">
              <label for="email">Email Address</label>
              <input type="email" id="email" required class="input" style="width:100%; padding:10px; border:1px solid rgba(255,255,255,.18); border-radius:8px; background:rgba(255,255,255,.10); color:rgba(255,255,255,.92);">
            </div>

            <div class="form-group" style="margin-bottom: 15px;">
              <label for="message">Message</label>
              <textarea id="message" rows="4" required class="input" style="width:100%; padding:10px; border:1px solid rgba(255,255,255,.18); border-radius:8px; background:rgba(255,255,255,.10); color:rgba(255,255,255,.92);"></textarea>
            </div>

            <button type="submit" class="btn">Send Message</button>
          </form>
        </article>
      </section>

      <%- include('partials/footer') %>
    </main>
  </div>

  <script src="/js/contact.js"></script>
</body>
</html>
